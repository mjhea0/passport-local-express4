extends ../base/layout

block content
    .container

        h1 투표 신청
        br
        hr
        .custom-control.custom-radio.custom-control-inline
            input#customRadioInline1.custom-control-input(type='radio', name='customRadioInline1')
            label.custom-control-label(for='customRadioInline1') Public Election
        .custom-control.custom-radio.custom-control-inline
            input#customRadioInline2.custom-control-input(type='radio', name='customRadioInline1')
            label.custom-control-label(for='customRadioInline2') Private Election
        hr

        form(role='form', action="/voteCreate", method="post", style='max-width: 600px;')
            label 투표제목
            .form-group
                input.form-control(type='text', name="votetitle")
            label 투표정보
            .form-group
                textarea.form-control(name="votecontent" rows="20" cols="10")
            button.btn.btn-primary(type='submit') 확인






